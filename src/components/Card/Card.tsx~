import * as React from 'react';

interface CardProps {
    theme: string;
    name: string;
    text: string;
}

const Card: React.FC<CardProps> = ({ theme, name, text }) => {
    return (
        <div className={`card ${theme}`}>
            <h3>{name}</h3>
            <p>{text}</p>
        </div>
    );
};

export default Card;